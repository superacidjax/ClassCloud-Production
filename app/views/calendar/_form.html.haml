- if @event.new_record?
  = form_for(@event, :url => class_room_events_path(@class.id),:multipart =>true) do |f|
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :file
      %br/
      = f.file_field :file
    .field
      = f.label :start_at
      %br/
      = f.datetime_select :start_at
    .field
      = f.label :end_at
      %br/
      = f.datetime_select :end_at
    .actions
      = f.submit
- else
  = form_for(@event, :url => class_room_event_path(@class.id, @event),:multipart =>true) do |f|
    - if @event.errors.any?
      #error_explanation
        %h2
          = pluralize(@event.errors.count, "error")
          prohibited this event from being saved:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      %br/
      = f.text_field :name
    .field
      = f.label :file
      %br/
      = f.file_field :file
    .field
      = f.label :start_at
      %br/
      = f.datetime_select :start_at
    .field
      = f.label :end_at
      %br/
      = f.datetime_select :end_at
    .actions
      = f.submit
