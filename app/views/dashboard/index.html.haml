          %h3
            = link_to "Add new class", new_class_room_path if current_user.is_teacher?
          %br
          %br
          %br
          %br
        .calendar_dashboard
          = raw(user_event)
          %br
          -if current_user.is_teacher?
            %br
            %br
         
            %br
        
            .feed
         
          
              - if !@student.blank? and @teacher.blank?
                .clear
