                      %div{:style => "float: left;width: 300px"}
                        %fieldset{:style => "width:150px; height: 50px"}
                          %legend
                            - unless class_rooms(class_room).blank?
                              = link_to "Class #{class_room.name}", class_room_teacher_path(class_room.id, @teacher.id)
