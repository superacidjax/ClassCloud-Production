%h1 Listing notes
%table
  %tr
    %th Title
    %th Description
    %th
    %th
    %th

    - @notes.each do |note|
      %tr
        %td
          - unless current_user.is_observer?
            = link_to note.title, comment_new_class_room_note_path(@class.id, note)
          - else
            - if @student
              = link_to note.title, go_to_student_note_class_room_note_path(@class.id, note, @student.id)
            - elsif @teacher
              = link_to note.title, go_to_teacher_note_class_room_note_path(@class.id, note, @teacher.id)
        %td= note.description
        -if current_user.is_teacher? and !current_user.class_rooms.blank?
          %td= link_to 'Show', class_room_note_path(@class.id, note),:method =>:get
          %td= link_to 'Edit', edit_class_room_note_path(@class.id, note)
          %td= link_to 'Destroy', class_room_note_path(@class.id, note), :confirm => 'Are you sure?', :method => :delete
          %td= link_to "Comment notes", comment_new_class_room_note_path(@class.id, note)
        -else
          -true
        - unless vote_notes(note).nil?
          %td= 'Weee!!'
        - else
          %td= link_to 'Weee!!',vote_up_class_room_note_path(@class.id ,note)
    %br
-if current_user.is_teacher? and !current_user.class_rooms.blank?
  =link_to 'New note', new_class_room_note_path(@class.id)
  