- if @note.new_record?
  = form_for @note, :url => class_room_notes_path(@class.id) do |f|
    -if @note.errors.any?
      #error_explanation
        %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
        %ul
          - @note.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :title
      %br/
      = f.text_field :title
    .field
      = f.label :description
      %br/
      = f.text_area :description
      = f.hidden_field :user_id,:value => current_user.id
    .actions
      = f.submit 'Save'
- else
  = form_for @note, :url => class_room_note_path(@class.id, @note) do |f|
    -if @note.errors.any?
      #error_explanation
        %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
        %ul
          - @note.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :title
      %br/
      = f.text_field :title
    .field
      = f.label :description
      %br/
      = f.text_area :description
      = f.hidden_field :user_id,:value => current_user.id
    .actions
      = f.submit 'Save'
