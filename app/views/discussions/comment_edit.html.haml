%table{:width => "50%"}
  %tr
    %td
      %b= @discussion.title
    %td{:align => "right"}
      = link_to "New", new_class_room_discussion_path(@class.id)
      - if current_user.id.eql?(@discussion.user_id) or current_user.is_teacher?
        = "|"
        = link_to "Edit", edit_class_room_discussion_path(@class.id, @discussion)
        = "|"
        = link_to "Delete", class_room_discussion_path(@class.id, @discussion), :confirm => "Are you sure ?", :method => :delete
  
  %tr
    %td{:colspan => "2"}
      From: #{@discussion.user.full_name}
  %tr
    %td{:colspan => "2"}
      Date: #{date_format(@discussion.created_at)}

  %tr
    %td{:colspan => "2"}
      %hr{:noshade => ""}
  %tr
    %td{:colspan => "2"}
      = @discussion.description
  %tr
    %td{:colspan => "2"}
      %hr{:noshade => ""}
  %tr
    %td{:colspan => "3"}
      #comments_container
        - @discussion.comments.each do |comment|
          %table{:width => "100%"}
            %tr
              %td{:rowspan => "3"}= image_tag "bakso.jpg", :width => "48", :height => "48"
              %td{:colspan => "3"}
                = "#{comment.user.full_name}"
                - unless vote_count(comment.id).eql?(0) or !current_user.is_teacher?
                  = '('
                  = vote_count(comment.id)
                  = ')'
                %br
                = "#{date_format(comment.created_at)}"
            %tr
              %td
                = comment.comment
                - unless comment.file_updated_at.nil?
                  %br
                  = 'file :'
                  - if current_user.is_observer?
                    = comment.file_file_name
                  - else
                    - if current_user.id.eql?(comment.user_id) or current_user.is_teacher?
                      = link_to comment.file_file_name, download_class_room_note_path(@class.id, comment.id)

                      | #{link_to 'remove',remove_file_class_room_discussion_path(@class.id, comment.id), :confirm => "Are you sure ?", :method => :put}
              %td{:align => "right"}
                - if current_user.id.eql?(comment.user_id) or current_user.is_teacher?
                  = link_to "Edit", class_room_comment_edit_discussions_path(@class.id, @discussion, comment.id)
                  | #{link_to "Delete", class_room_comment_destroy_discussions_path(@class.id, @discussion, comment.id), :method => :delete}
                - unless vote_comment(comment).nil?
                  = 'Wee!!'
                - else
                  = link_to 'Weee!!',class_room_comment_vote_path(@class.id ,@discussion.id,comment,:commentable_type =>"#{params[:controller]}")

            %tr
              %td{:colspan => "3"}
                %hr{:noshade => ""}
%h1 Update a comment
= form_tag(class_room_comment_update_discussions_path(@class.id, @discussion, @comment.id), :method => :put,:multipart =>true) do |f|
  .field
    = text_area_tag "comment[comment]", @comment.comment, :rows => 4, :cols => 40
    %br
    = file_field_tag "comment[file]"
  .actions
    = submit_tag "Update this Comment"